package com.kh.practice1.func;

import java.util.Scanner;

public class VariablePractice3 {

	public void Square() {
		
		Scanner sc = new Scanner(System.in);
		System.out.print("가로 : ");
		int garo = sc.nextInt();
		System.out.print("세로 : ");
		int sero = sc.nextInt();
		
		System.out.println("면적 : "+ (garo * sero));
		System.out.println("둘레 : "+ ((garo +sero)*2));
	}
	
}

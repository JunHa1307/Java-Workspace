package com.kh.chap01.condition;

import java.util.Scanner;

public class A_If {
	/*
	 * 기본적으로 프로그램의 진행은 순차적으로 진행됨.
	 * 단, 이 순차적인 흐름을 바꾹자 한다면 제어문을 이용해서 직접 제어 가능.
	 * 
	 * 선택적으로 실행시키고자 할때 => 제어문
	 * 반복적으로 실행시키고자 할때 => 반복문
	 * 그 외에는 => 분기문
	 * 
	 * 조건문
	 * 조건식을 통해 참이냐 거짓이냐를 판단해서 그에 해당하는 코드 실행
	 * 
	 * 조건식
	 * 반드시 결과는 true 나 false 여야함
	 * 보통의 조건식에는 비교연산자, 논리연산자를 주로 사용함
	 * 
	 * 조건문은 크게 if문(단독, if, elseif, 중복if) switch문으로 나뉨
	 * 
	 * 
	 * 
	 */
	//삼항 연산자를 조건문으로 바꿔보기
	public void method1() {
		/*
		 * 
		 * 단독 if문
		 * 
		 * [표현법]
		 * if(조건식){
		 * 		조건식이 true 인경우 실행할 코드
		 * }
		 * => 조건식의 결과가 참일경우 중괄호블록 안의 코드가 실행
		 * => 조건식의 결과가 거짓일경우 중괄호 안의 코드가 무시되고 넘어감
		 * 
		 */
		
		// 사용자에게 정수값을 입력 받은 후 "양수다", "양수가 아니다." 를 출력
		Scanner sc = new Scanner(System.in);
		
		System.out.print("정수를 입력해주세요 : ");
		int num = sc.nextInt();
		
		
		//(num > 0)?"양수입니다.":"음수입니다.";
		if(num > 0) {
			System.out.println("양수입니다.");//양수입니다. 출력 먼저 적고 if 블럭으로 감싼다.
		}
		if(num <= 0) {
		
		System.out.println("양수가 아닙니다.");
		}
	}
	public void method2() {
		Scanner sc = new Scanner(System.in);
		
		System.out.print("정수를 입력하세요.");
		int num = sc.nextInt();
		/*
		 * if ~ else
		 * if(조건식) {
		 * 		..조건식이 true일 경우 실행될 코드
		 * } else {
		 * 		..조건식이 false일 경우 실행될 코드
		 * }
		 * 
		 */
		if (num >0) {
			System.out.println("양수입니다.");
		}else {
			System.out.println("양수가 아닙니다.");
		}
	}
	public void method3() {
		
		Scanner sc = new Scanner(System.in);
		System.out.print("정수를 입력하세요 : ");
		int num = sc.nextInt();

		// if ~ else if문
		/*
		 * 같은 비교대상으로 여러개의 조건을 제시해야 할 경우
		 * if(조건식1) {
		 * 		..조건식1이 true라면 실행시킬 코드 작성
		 * }else if(조건식2) {
		 * 		..조건식2가 true라면 실행시킬 코드 작성
		 * }else if(조건식3) {
		 * 		..조건식3이 true라면 실행시킬 코드 작성
		 * }[else {
		 * 		..위의 모든 조건식의 결과가 false라면 실행할 코드
		 * }]
		 * 조건식을 두개이상 만족시킬경우 무조건 앞에 있는 것 한번만 실행된다.
		 */
				
		if(num>0) {
			System.out.println("양수입니다");
		}else if(num == 0) {
			System.out.println("0입니다.");
		}else /*if(num < 0)*/ {
			System.out.println("음수입니다.");
		}
		
	}
	public void method4() {
		//사용자가 입력한 나이값을 가지고 어린이/청소년/성인 출력
		//if elseif문으로 만들어보기
		// 어린이는 13세이하 청소년은 19세이하 그외에는 성인
		Scanner sc = new Scanner(System.in);
		
		System.out.print("나이를 입력 : ");
		int age = sc.nextInt();
		
		String result;//박스만들기
		
		if(age<14) {
			System.out.println("어린이");
		}else if(age<20) {
			System.out.println("청소년");
		}else {
			System.out.println("성인");
		}
		//다른 방법으로 풀어보기 -> 어린이, 청소년 , 성인에 대한 값을
		//담아두고 마지막에 출력문으로 출력해보기 
		if(age<14) {
			result ="어린이";
		}else if(age<20) {
			result = "청소년";
		}else {
			result = "성인";
		}
		System.out.println(result);
	}
	public void method5() {
		Scanner sc = new Scanner(System.in);
		//사용자에게 이름, 성별을 입력받아 남자인지, 여자인지 출력하는 메서드
		
		System.out.print("이름은 : ");
		String name = sc.nextLine();
		
		System.out.print("성별을 입력하세요 : ");
		char gender = sc.nextLine().charAt(0);
		
		String result;
		
		if(gender == 'm' || gender == 'M') {
			
		}
	}
}

package com.kh.operator;

public class C_Compound {
	//복합대입연산자
	
	/* 산술 연산자와 대입연산자를 함께사용하는 연산자
	 * 
	 * += -= *= /= %=
	 * 
	 * a = a + 3; == a += 3;
	 * 기존의 a값에 3을 더해 a에 다시 대입해주겠다 라는 뜻
	 * 
	 * 
	 */
	
	public void method() {
		
		int num = 12;
		
		System.out.println("현재 num :"+ num);
		
		//num을 3 증가시키기
		num = num + 3;
		System.out.println("3을 증가시킨 num : "+ num);
		//num을 3 또 증가시키기
		num += 3;
		System.out.println("또 증가시킨 num의 값 : " + num);
		
	}
	
	
}
